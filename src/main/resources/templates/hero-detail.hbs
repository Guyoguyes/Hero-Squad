{{#partial "content"}}
    <div class="container">
        <div class="overlay" style="width:50%">
            <div class="page-header mt-4">
                <h1>{{hero.name}}'s details</h1>
            </div>
            <p>Name:{{hero.name}}</p>
            <p>Age: {{hero.age}}</p>
            <p>Super Power: {{hero.superPower}}</p>
            <p>Weakness: {{hero.weakness}}</p>
            <p>Squad: {{squads.name}}</p>
            <a  href="/heroes/{{hero.id}}/delete" class="btn btn-primary">Delete</a>
            <a href="/heroes/{{hero.id}}/edit" class="btn btn-primary">Update</a>
        </div>

    </div>

{{/partial}}
{{>layout.hbs}}